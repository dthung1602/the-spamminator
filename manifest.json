{
  "manifest_version": 2,
  "name": "TheSpamminator",
  "version": "0.1",
  "description": "Remove banger alert spams from comment section of mangakakalot",
  "content_scripts": [
    {
      "matches": [
        "*://mangakakalot.com/chapter/*",
        "*://readmanganato.com/manga-*"
      ],
      "js": [
        "mangasite.js"
      ],
      "all_frames": true
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "web_accessible_resources": [
    "images/spam-man.png",
    "images/spam.png"
  ],
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "<all_urls>"
  ]
}