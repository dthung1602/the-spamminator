{
  "manifest_version": 2,
  "name": "TheSpamminator",
  "version": "0.1",
  "description": "Remove banger alert spams from comment section of mangakakalot",
  "browser_action": {
    "default_icon": {
      "16": "images/spam-logo-16.png",
      "32": "images/spam-logo-32.png",
      "64": "images/spam-logo-64.png"
    },
    "default_title": "The Spamminator",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://mangakakalot.com/chapter/*",
        "*://readmanganato.com/manga-*"
      ],
      "js": [
        "mangasite.js"
      ],
      "all_frames": true
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "web_accessible_resources": [
    "images/spam-man.png",
    "images/spam.png"
  ],
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "<all_urls>"
  ]
}