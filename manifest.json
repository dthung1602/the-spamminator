{
  "manifest_version": 2,
  "name": "FuckBangerAlert",
  "version": "0.1",
  "description": "Remove banger alert spams from comment section of mangakakalot",
  "content_scripts": [
    {
      "matches": [
        "*://mangakakalot.com/chapter/*",
        "*://readmanganato.com/manga-*"
      ],
      "js": [
        "mangasite.js"
      ],
      "all_frames": true
    },
    {
      "matches": [
        "*://www.facebook.com/plugins/comments*"
      ],
      "js": [
        "facebook.js"
      ],
      "all_frames": true
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "web_accessible_resources": ["images/spam.png"],
  "permissions": [
    "https://www.facebook.com/plugins/comments*",
    "tabs",
    "activeTab"
  ]
}